<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#343e56">

<RelativeLayout
    android:id="@+id/btn1"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/leftlay"
        android:layout_width="8dp"
        android:layout_height="330dp"
        android:layout_toLeftOf="@id/btn1"
        android:layout_marginRight="-14dp"
        android:background="@color/lay"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/rightlay"
        android:layout_width="8dp"
        android:layout_height="330dp"
        android:layout_toRightOf="@id/btn1"
        android:layout_marginLeft="-14dp"
        android:background="@color/lay"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/toplay"
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:layout_above="@id/btn1"
        android:background="@color/lay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-14dp"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/bottomlay"
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:layout_below="@id/btn1"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:background="@color/lay" />

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/toplay"
        android:layout_toLeftOf="@id/leftlay">

        <ImageView
            android:id="@+id/btnn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/toplay"
        android:layout_toLeftOf="@id/rightlay">

        <ImageView
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="8dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/toplay"
        android:layout_toRightOf="@id/rightlay">

        <ImageView
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/bottomlay"
        android:layout_toLeftOf="@id/leftlay">

        <ImageView
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="2dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/bottomlay"
        android:layout_toRightOf="@id/rightlay">

        <ImageView
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/bottomlay"
        android:layout_toRightOf="@id/rightlay">

        <ImageView
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/bottomlay"
        android:layout_toRightOf="@id/leftlay">

        <ImageView
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/bottomlay"
        android:layout_toLeftOf="@id/leftlay">

        <ImageView
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnreset"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:backgroundTint="#2C1818"
        android:text="RESET"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORE"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginLeft="130dp"/>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player X :- 0"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginLeft="130dp"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Y :- 0"
            android:textSize="25sp"
            android:layout_marginLeft="130dp"
            android:textColor="@color/white"/>
    </LinearLayout>






</RelativeLayout>